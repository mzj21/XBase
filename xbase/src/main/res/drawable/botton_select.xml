<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp" />
            <stroke android:width="1dp" android:color="#EE5C42" />
            <solid android:color="#7FEE5C42" />
            <padding android:bottom="@dimen/_5dp" android:left="@dimen/_20dp" android:right="@dimen/_20dp" android:top="@dimen/_5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp" />
            <stroke android:width="1dp" android:color="#EE5C42" />
            <solid android:color="@color/white" />
            <padding android:bottom="@dimen/_5dp" android:left="@dimen/_20dp" android:right="@dimen/_20dp" android:top="@dimen/_5dp" />
        </shape>
    </item>
</selector>